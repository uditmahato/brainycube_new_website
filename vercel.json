{
    "version": 2,
    "builds": [
      {
        "src": "app.py",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "15mb", 
          "runtime": "python3.9" 
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "app.py"
      }
    ],
    "env": {

      "FLASK_SECRET_KEY": "@flask_secret_key",
      "DATABASE_URL": "@database_url",
      "FIREBASE_CREDENTIALS_BASE64": "@firebase_credentials_base64",
      "RUN_VERCEL_MIGRATIONS": "1"
    },
    "build": {
      "env": {
          "FLASK_SECRET_KEY": "@flask_secret_key",
          "FIREBASE_CREDENTIALS_BASE64": "@firebase_credentials_base64",
          "RUN_VERCEL_MIGRATIONS": "1"
      }
    }
  }